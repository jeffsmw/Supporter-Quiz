<h1>Results</h1>

<hr/>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Department</th>
    <th>Message</th>
    <th>Actions</th>
    <th>Status</th>
  </tr>
<% @request.each do |r| %>
<tr>
  <th><%= r.name %></th>
  <th><%= r.email %></th>
  <th><%= r.department %></th>
  <th><%= r.message %></th>
  <th><%= link_to "Edit", edit_request_path(r.id) %>
      <%= link_to "Delete", request_path(r.id), method: :delete, data: {confirm: 'Do you want to delete this request? '} %></th>
  <th><%= link_to r.status, "/requests/#{r.id}/change" %></th>
</tr>
<% end %>
</table>
<hr>
